<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.motion.widget.MotionLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layoutDescription="@xml/content_left_layout_scene">

    <androidx.constraintlayout.utils.widget.ImageFilterView
        android:id="@+id/one_img"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:background="#0f0"
        app:layout_constraintBottom_toBottomOf="@+id/one_tv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/one_tv"></androidx.constraintlayout.utils.widget.ImageFilterView>

    <TextView
        android:id="@+id/one_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="tab_one"
        android:background="#f0f"
        android:gravity="center_vertical|left"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/one_img"
        app:layout_constraintTop_toTopOf="parent"></TextView>
    <androidx.constraintlayout.utils.widget.ImageFilterView
        android:id="@+id/two_img"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:background="#0ff"
        app:layout_constraintBottom_toBottomOf="@+id/two_tv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/two_tv"></androidx.constraintlayout.utils.widget.ImageFilterView>

    <TextView
        android:id="@+id/two_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="tab_two"
        android:background="#f0f"
        android:gravity="center_vertical|left"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toBottomOf="@+id/one_tv"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/two_img"></TextView>


</androidx.constraintlayout.motion.widget.MotionLayout>