<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ConstraintSet android:id="@+id/start">
        <Constraint android:id="@+id/one_img"
            android:alpha="0f" />
        <Constraint
            android:id="@+id/one_tv"
            app:layout_constraintLeft_toRightOf="@+id/one_img"
            android:layout_width="0dp"
            android:layout_height="60dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:rotationX="90" />
        <Constraint
            android:id="@+id/two_img"
            android:alpha="0f" />
        <Constraint
            android:id="@+id/two_tv"
            app:layout_constraintLeft_toRightOf="@+id/two_img"
            android:layout_width="0dp"
            android:layout_height="60dp"
            app:layout_constraintTop_toBottomOf="@+id/one_tv"
            app:layout_constraintRight_toRightOf="parent"
            android:rotationX="90" />
    </ConstraintSet>

    <ConstraintSet android:id="@+id/end">
        <Constraint android:id="@id/one_img" />
        <Constraint
            android:id="@+id/one_tv"
            app:layout_constraintLeft_toRightOf="@+id/one_img"
            android:layout_width="0dp"
            android:layout_height="60dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        <Constraint
            android:id="@+id/two_img"
            android:layout_width="55dp"
            android:layout_height="55dp"
            app:layout_constraintBottom_toBottomOf="@+id/two_tv"
            app:layout_constraintTop_toTopOf="@+id/two_tv"
            app:layout_constraintStart_toStartOf="parent" />
        <Constraint
            android:id="@+id/two_tv"
            app:layout_constraintLeft_toRightOf="@+id/two_img"
            android:layout_width="0dp"
            android:layout_height="60dp"
            app:layout_constraintTop_toBottomOf="@+id/one_tv"
            app:layout_constraintRight_toRightOf="parent" />
    </ConstraintSet>

    <Transition
        app:constraintSetEnd="@id/end"
        app:constraintSetStart="@+id/start"
        app:duration="@android:integer/status_bar_notification_info_maxnum" >
        <OnSwipe app:dragDirection="dragLeft" />
    </Transition>
</MotionScene>
