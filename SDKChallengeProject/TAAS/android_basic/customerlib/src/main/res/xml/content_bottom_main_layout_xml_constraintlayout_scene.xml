<?xml version="1.0" encoding="utf-8"?>
<MotionScene 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <Transition
        motion:constraintSetEnd="@+id/left_end"
        motion:constraintSetStart="@id/start"
        motion:duration="1000">
       <KeyFrameSet>
       </KeyFrameSet>
    </Transition>

    <ConstraintSet android:id="@+id/start">
        <Constraint
            android:id="@+id/bg_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:alpha="1"
            motion:layout_constraintTop_toBottomOf="@+id/title_view"
            android:layout_marginTop="40dp" />
        <Constraint
            android:id="@+id/title_view"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            motion:layout_constraintTop_toTopOf="parent"
            android:alpha="0.4"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintEnd_toEndOf="parent" />
        <Constraint
            android:id="@+id/title_right_view"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:visibility="gone"
            motion:layout_constraintEnd_toEndOf="parent" />
        <Constraint
            android:id="@+id/title_right_view"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:visibility="gone"
            motion:layout_constraintEnd_toEndOf="parent" />
        <Constraint
            android:id="@+id/title_tv"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintEnd_toEndOf="parent" />
    </ConstraintSet>

    <ConstraintSet android:id="@+id/left_end">
        <Constraint
            android:id="@+id/bg_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:alpha="0.4"
            motion:layout_constraintTop_toBottomOf="@id/title_view"
            android:layout_marginTop="40dp" />
        <Constraint
            android:id="@+id/title_view"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:alpha="0.4"
            motion:layout_constraintBottom_toTopOf="@id/bg_view" />
        <Constraint
            android:id="@+id/title_right_view"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:visibility="visible"
            motion:layout_constraintRight_toRightOf="parent"
            android:layout_marginRight="6dp" />
        <Constraint
            android:id="@+id/title_tv"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginLeft="6dp"
            motion:layout_constraintLeft_toLeftOf="parent" />
    </ConstraintSet>
</MotionScene>